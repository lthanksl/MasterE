<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mem">

	<!-- 1-1.1insert -->
	<!-- 회원가입 기능 ( ID,NAME,PW,EMAIL,PHONE,ADDR)-->
	<insert id="insert" parameterType="java.util.Map">
	INSERT INTO TB_MEMBERS ( ID,NAME,PW,EMAIL,PHONE,ADDR )
	<!-- VALUES ( #{ID}, , , ,  ) -->
	 VALUES ( #{ID},#{NAME},#{PW},#{EMAIL},#{PHONE},#{ADDR}  ) 
	</insert>
	<!-- 2-1.1insert 끝 -->
	
	
	
	
	<!-- 1-2.2select-->
	<!--  로그인 기능 -->
	<select id="login" parameterType="java.util.Map" resultType="mybatis.vo.VOMem" >
		SELECT * FROM TB_MEMBERS
		WHERE ID = #{ID} AND PW = #{PW}
	</select>
	<!--  아이디로 검색 -->
	<select id="check_id" parameterType="String" resultType="mybatis.vo.VOMem" >
		SELECT ID FROM TB_MEMBERS
		WHERE ID = #{ID}
	</select>
	<!-- 2-2.2select 끝-->
	
	<!-- 1-3.3update -->
	
	<!-- 2-3.3update 끝 --> 
	
	
</mapper>